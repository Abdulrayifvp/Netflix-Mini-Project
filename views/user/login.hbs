<section>
    <div class="container p-5">
        <h1 class="text-light mt-5 mb-5">Login</h1>
        
        <form class="text-light " action="/login" method="post">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input
        type="email"
        class="form-control"
        name="email"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
      />
      {{!-- <div id="emailHelp" class="form-text">We'll never share your email with
        anyone else.</div> --}}
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input type="password" name="password" class="form-control" id="exampleInputPassword1" />
    </div>
    {{#if loginErr}}
        <p class="text-danger ">{{loginErr}}</p>
    {{/if}}
    <div class="flexbox">
        <button  type="submit" class="btn btn-danger">Login</button>
        <a class="text-danger float-end" href="/signup" style="text-decoration: none;">Create an account?</a>
    </div>
    
  </form>
    </div>
  
</section>