<section>
  
  <div class="container bg-dark ">
    
    {{#if users}}
    <div class="container">
        <form>
  <div class="d-flex bd-highlight mt-5 mb-5">
    <input type="text" id="Input" class="form-control w-50 bd-highligh" placeholder="Search">
      
    <a class="btn btn-success ms-auto  bd-highlight" href="/admin/create-user/" type="submit">ADD SUBSCRIBERS</a>
  </div>
  
</form>
        
           
    
  </div>
      <table class="table text-light">
        <thead>
          <tr>
            <th scope="col">S.No</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
            <th scope="col">Edit</th>
            <th scope="col">Remove</th>
          </tr>
        </thead>
        <tbody id="tbody">
          {{#each users}}

              <th scope="row">{{inc @index}}</th>
              <td>{{this.firstName}}</td>
              <td>{{this.secondName}}</td>
              <td>{{this.email}}</td>
              <td>{{this.password}}</td>
              <td><a
                  class="btn btn-primary"
                  href="/admin/edit-user/?id={{this._id}}"
                >Edit</a></td>
              <td><a
                  onclick="return confirm('Are you want to delete {{this.firstName}} {{this.secondName}} ?')"
                  class="btn btn-danger"
                  href="/admin/remove-user/?id={{this._id}}"
                >Remove</a></td>

            </tr>
            
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <div class="col">
        <h1 class="text-light mt-5 pt-5">No Subscribers</h1>
        <a class="btn btn-danger"  href="/admin/create-user/" type="submit">ADD SUBSCRIBERS</a>
      </div>
    {{/if}}

  </div>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
   $(document).ready(function() {
                $("#Input").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#tbody tr").filter(function() {
                        $(this).toggle($(this).text()
                        .toLowerCase().indexOf(value) > -1)
                    });
                });
            });
</script>